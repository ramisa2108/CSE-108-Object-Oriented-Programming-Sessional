<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #3c4743;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginPageController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Welcome" textFill="#80ccb1">
                     <font>
                        <Font name="Comic Sans MS" size="40.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Name     " textFill="#80ccb1">
                     <font>
                        <Font name="Comic Sans MS" size="26.0" />
                     </font>
                  </Label>
                  <TextField fx:id="NameText" promptText="Enter username">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Password" textFill="#80ccb1">
                     <font>
                        <Font name="Comic Sans MS" size="26.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="PasswordText" promptText="Enter password">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </PasswordField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label text="Type    " textFill="#80ccb1">
                     <font>
                        <Font name="Comic Sans MS" size="26.0" />
                     </font>
                  </Label>
                  <TextField fx:id="typeText" promptText="Enter login type">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#loginPressed" style="-fx-background-color: #80ccb1;" text="Log In">
                     <font>
                        <Font name="Comic Sans MS" size="24.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="messageText" text="Wrong uername or password" textFill="#80ccb1" visible="false" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Comic Sans MS" size="26.0" />
                     </font>
                  </Label>
                  <Button fx:id="tryAgainButton" alignment="CENTER" mnemonicParsing="false" onAction="#tryAgainPressed" style="-fx-background-color: #80ccb1;" text="Try Again?" translateX="40.0" visible="false" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Comic Sans MS" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
